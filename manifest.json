{
  "manifest_version": 2,
  "name": "B.S. This!",
  "version": "0.1",
  "description": "Replace every font on a page with Sans Bullsh!t Sans",
  "homepage_url": "https://github.com/pinoceniccola/bsthis-webext",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "B.S. This!"
  },

  "background": {
    "scripts": ["background.js"]
  }

}